{{#section 'head'}}
  <link href="/lib/angular-ui-grid/ui-grid.min.css" rel="stylesheet">
  <link href="/lib/angular-ui-select/dist/select.min.css" rel="stylesheet">
  <link href="/css/data-admin.css" rel="stylesheet">
{{/section}}

<div class="ng-app" ng-controller="DataCtrl">

  {{{{raw-helper}}}}
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">資料管理</a>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li ng-repeat="model in models"><a href="{{model.model}}">{{model.name}}</a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
              表單群組<span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li ng-repeat="model in models"><a href="{{model.model}}">{{model.name}}</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="grid-table" ui-grid="gridOptions" ui-grid-edit ui-grid-row-edit ui-grid-cellNav></div>
      </div>
    </div>
  </div>
  {{{{/raw-helper}}}}

  <script type="text/ng-template" id="select-editor.html">
    {{> select-editor}}
  </script>
  <script type="text/ng-template" id="multiselect-editor.html">
    {{> multiselect-editor}}
  </script>

</div>

{{#section 'script'}}
{{/section}}